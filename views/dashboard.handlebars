<main id="dashboard">
    <div class="container">
        <a class="btn-floating btn-large waves-effect waves-light red" id="add-graph"><i class="material-icons">add</i></a>
        <div class="row">
            <div class="col s12 m6 ">
                <div class="card-panel">
                    <span class="">All Graphs will come in Cards such as these. Graph details too will have to be displayed here. Maybe a sample image of the graph or the graph itself can be rendered too.
                    </span>
                </div>
            </div>
            
        </div>
    </div>        

    <div class="graph-container" id="graph-builder">
        <div class="row">
            <ul class="col l4 s12" id="graph-form">
                <li><select name="select-graph" id="select-graph"></select><label for="select-graph"></label></li>
                <li><select name="xaxis" id="xaxis"></select><label for="xaxis"></label></li>
                <li><select name="yaxis" id="yaxis"></select><label for="yaxis"></label></li>
                <li><button class="btn red waves-effect waves-light" id="create-graph-btn">Create Graph</button></li>
            </ul>
            <div class="col l8 hide-on-small" id="graph-area">

            </div>
        </div>


    </div>
    
    <script src="/js/dependencies/plotly-latest.min.js"></script>
</main>